{% block body %}
    <h1>Formation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Start</th>
                <th>End</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.id }}</td>
                <td>{{ formation.name }}</td>
                <td>{{ formation.start ? formation.start|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ formation.end ? formation.end|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ formation.description }}</td>
                <td>
                    <a href="{{ path('formation_show', {'formation': formation.id}) }}">show</a>
                    <a href="{{ path('formation_edit', {'formation': formation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('formation_new') }}">Create new</a>
{% endblock %}
