{% extends 'layout/base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}
Me contacter
{% endblock %}

{% block body %}
    <h1>Laissez moi un message</h1>

    <div class="contact col lg-6 col-md-6">
        {{ form_start(form) }}

        <label for="contact_lastname">
            Nom
        </label>
        {{ form_widget(form.lastname, {'attr': {'placeholder': 'Entrer votre nom'}}) }}

        <label for="contact_firstname">
            Prénom
        </label>
        {{ form_widget(form.firstname, {'attr': {'placeholder': 'Entrer votre prénom'}}) }}

        <label for="contact_email">
            Email
        </label>
        {{ form_widget(form.email, {'attr': {'placeholder': 'Entrer votre email'}}) }}

        <label for="contact_number">
            Numéro de téléphone
        </label>
        <small class="text-danger">Pas obligtoire</small>
        {{ form_widget(form.number, {'attr': {'placeholder': 'Entrer votre numéro'}}) }}

        <label for="contact_message">
            Prénom
        </label>
        {{ form_widget(form.message, {'attr': {'placeholder': 'Un message ? Une question ?'}}) }}

        <button class="btn">Envoyer</button>

        {{ form_end(form) }}
    </div>

{% endblock %}
